<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="16dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context="com.dragondev.n2kanji.fragment.KanjiDetailFragment">

    <TextView
        android:id="@+id/tv_title_kanji"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="漢字"
        android:textColor="#f6f6f6"
        android:textSize="80sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_onyoumi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:lineSpacingExtra="4dp"
            android:scrollbars="vertical"
            android:text="Onyoumi"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_title_kunyomi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:lineSpacingExtra="4dp"
            android:scrollbars="vertical"
            android:text="Kunyomi"
            android:textColor="@color/greenAccent"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>


